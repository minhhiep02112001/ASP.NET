@model Models.EntityFramework.KHACH_HANG

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container stylization maincont">


    <ul class="b-crumbs">
        <li>
            <a href="index.html">
                Home
            </a>
        </li>
        <li>
            <span>Registration </span>
        </li>
    </ul>
    <h1 class="main-ttl"><span>Registration</span></h1>
    <div class="auth-wrap">
        <div class="auth-col">
            <h2>Register</h2>
            @using (Html.BeginRouteForm("RouteClient" , new {action= "Register" } , FormMethod.Post  ))
            {
                @Html.AntiForgeryToken()
                <span style = "color:red;" >
                    @Html.ValidationSummary(false, "", new { @class = "help-block form-text text-danger", @style = "color:red;" })
                    @ViewBag.ErrorRegister
                </span>
                
                <p style="display:flex;">
                    <label for="reg_email">Tên : <span class="required">*</span></label>
                    @Html.EditorFor(model => model.TEN_KH, new { htmlAttributes = new { @class = "form-control" } })
                </p>                       
                <p style="display:flex;">
                    <label for="reg_email">Địa Chỉ : <span class="required">*</span></label>
                    @Html.EditorFor(model => model.DIA_CHI, new { htmlAttributes = new { @class = "form-control" } })
                </p>
                <p style="display:flex;">
                    <label for="reg_email">SĐT : <span class="required">*</span></label>
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                </p>
                <p style="display:flex;">
                    <label for="reg_email">Email : <span class="required">*</span></label>
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                </p>
                <p style="display:flex;">
                    <label for="reg_password">Mật Khẩu :<span class="required">*</span></label>
                    @Html.PasswordFor(model => model.MK, new { htmlAttributes = new { @class = "form-control" } })
                </p>
                
                <p class="auth-submit">
                    <button type="submit">Đăng Ký</button>
                </p>
                <p class="auth-lost_password">
                    <a href="#">Đăng Nhập</a>
                </p>


            }
        </div>
    </div>



</section>


